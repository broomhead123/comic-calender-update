<Window x:Class="MarvelComicCalanderUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Comic Release Date Calender Updater" FontSize="26"></Label>
        <TextBox Height="50" Width="204" Name="searchBox" HorizontalAlignment="Left" ></TextBox>
        <Button Height="50" Width="100" Click="SearchButton_Click" Content="Search"></Button>
        <Button Height="50" Width="100" Click="AddButton_Click" VerticalAlignment="Bottom" Content="Add" Margin="417,0,0,55"></Button>
        <Button Height="50" Width="100" Click="AddAllButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Add All"></Button>
        <ComboBox Width="200" Name="listBox" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</Window>
